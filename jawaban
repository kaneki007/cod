				"c++ ()",
				"program ()",
				"C",
				10);

	s6.setValues("6. Yang termasuk bahasa program adalah?",
				"mozilla()",
				"google ()",
				"c++ ()",
				"program ()",
				"C",
				10);

	s7.setValues("7. Yang termasuk bahasa program adalah?",
