		cout<<"Selamat Mengerjakan "<<endl;
		cout<<endl;
	}
	
		else if (Respon == "ya")
	{
		cout<<endl;
		cout<<"Selamat Mengerjakan "<<endl;
		cout<<endl;
	}
		else if (Respon == "tidak")
	{
		cout<<"Terima Kasih "<<endl;
		system("PAUSE");
		exit(0);
	}
		else if (Respon == "Tidak")
	{
		cout<<"Terima Kasih "<<endl;
		system("PAUSE");
		exit(0);
	}
		else
	{
		cout<<"Tidak ada dalam pilihan "<<endl;
		system("PAUSE");
		exit(0);
	}

	//Dani sama Rizky
	//Dani no 1 sampe 5
	//Rizky no 6 sampe 10
	Soal s1;
	Soal s2;
	Soal s3;
	Soal s4;
	Soal s5;
	Soal s6;
	Soal s7;
	Soal s8;
	Soal s9;
	Soal s10;

	s1.setValues("1. Yang termasuk bahasa program adalah?",
				"mozilla()",
				"google ()",
				"c++ ()",
