				"c++ ()",
				"program ()",
				"C",
				10);

	s4.setValues("4. Yang termasuk bahasa program adalah?",
				"mozilla()",
				"google ()",
				"c++ ()",
				"program ()",
				"C",
				10);

	s5.setValues("5. Yang termasuk bahasa program adalah?",
				"mozilla()",
