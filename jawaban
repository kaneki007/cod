		string Soal_Text;
		string Jawaban_A;
		string Jawaban_B;
		string Jawaban_C;
		string Jawaban_D;
		string Jawaban_Benar;		
		int Soal_Score;

	public:
		void setValues (string , string , string , string , string , string, int);
		void askSoal ( );

};

int main()
